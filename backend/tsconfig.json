{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,                   
        "lib": ["es6"],                     
        "allowJs": true,                          
        "rootDir": "src",
        "strict": true,         
        "resolveJsonModule": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
}